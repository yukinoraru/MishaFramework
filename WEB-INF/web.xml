<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>Front Controller Test</display-name>
	<description>For KPT</description>

	<!--Application Initial Parameter -->
	<context-param>
		<param-name>mode.debug</param-name>
		<param-value>true</param-value>
	</context-param>

	<filter>
		<description>Routing Filter</description>
		<display-name>Routing Filter</display-name>
		<filter-name>RoutingFilter</filter-name>
		<filter-class>jp.recruit.bootcamp.filter.RoutingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>RoutingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

	<jsp-config>
		<jsp-property-group>
			<display-name>JSP Config</display-name>
			<url-pattern>*.jsp</url-pattern>
			<el-ignored>false</el-ignored>
			<page-encoding>UTF-8</page-encoding>
			<scripting-invalid>false</scripting-invalid>
			<include-prelude>/WEB-INF/views/layout/common.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>

</web-app>
